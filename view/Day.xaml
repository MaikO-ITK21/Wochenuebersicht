<Page x:Class="wochenuebersicht_2.Day"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wochenuebersicht_2"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="{Binding Selected_KW_Idx }">


     <Grid Margin="10,0,10,10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="270" />
               
            </Grid.ColumnDefinitions>
       


            <ListView   Grid.Column="1" HorizontalAlignment="Right"  ItemsSource="{Binding Weekdays}" SelectedIndex="{Binding Selected_Day_Idx}" FontSize="10"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="100"  Header="Wochentag" DisplayMemberBinding="{Binding Day}" />
                    <GridViewColumn   Width="100" Header ="Aufgaben" DisplayMemberBinding="{Binding Task}" />
                </GridView>
            </ListView.View>

        </ListView>
    </Grid>
</Page>
