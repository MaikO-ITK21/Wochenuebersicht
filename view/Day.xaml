<Page
    x:Class="wochenuebersicht_2.Day"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wochenuebersicht_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Week_Day}"
    d:DesignHeight="350"
    d:DesignWidth="500"
    mc:Ignorable="d">


    <Grid Margin="10,0,10,10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="270" />

        </Grid.ColumnDefinitions>



        <ListView
            Grid.Column="1"
            HorizontalAlignment="Right"
            FontSize="10"
            ItemsSource="{Binding DayList}" >

            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding WeekDay}"
                        Header="Wochentag" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Task}"
                        Header="Aufgaben" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
